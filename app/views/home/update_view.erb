<h1>이곳은 수정하기 페이지 입니다.</h1>
<div class="container" style="margin-top:50px">
    <form action="/realupdate/<%= @one_post.id %>" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">제목</label>
        <input name="title" type="text" value=<%= @one_post.title %> class="form-control" id="exampleInputEmail1" placeholder="제목을 작성해 주세요">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">내용</label>
        <textarea name="content" class="form-control" rows="5" placeholder="내용을 작성해 주세요"><%= @one_post.content %></textarea>
      </div>
      <button type="submit" class="btn btn-default" style="margin-top:20px">전송</button>
    </form>
</div>